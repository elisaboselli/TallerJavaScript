extends layout

block content
  .container
    h1 Ingresar
    h3 Debe estar conectado para jugar.
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
        input.field(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.field(type='password', name="password", placeholder='Password')
      button.button1(type='submit') Aceptar
      &nbsp;
      a(href='/')
        button.button1(type="button") Cancelar
