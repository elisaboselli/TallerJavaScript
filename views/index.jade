extends layout

block content
  .container
    if (!user)
      h1 ¡¡Bienvenido a Truco Argenino Online!!
      a(href="/login")
        button.button1(type="button") Ingresar
      br
      a(href="/register") 
        button.button1(type="button") Registrarse
